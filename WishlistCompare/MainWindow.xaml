<Window x:Class="WishlistCompare.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Wishlist Compare" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        
        <TextBox Grid.Row="0" Grid.ColumnSpan="2"
                 Name="txtDisplay" VerticalScrollBarVisibility="Auto">Testing</TextBox>
        <Button Grid.Row="1" Grid.Column="0"
                Margin="5"
                Name="btnLoad"
                Click="btnLoad_Click">Load</Button>
        <Button Grid.Row="1" Grid.Column="1"
                Margin="5"
                Name="btnDebug"
                Click="btnDebug_Click">Debug</Button>
        
    </Grid>
</Window>
